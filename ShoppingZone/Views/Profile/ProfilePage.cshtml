@using ShoppingZone.Data.Entity
@model User
@{
    ViewBag.Title = "ProfilePage";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<head>
    <link href="~/src/still/ProfilePage.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top: 30px">
        <div class="profileArea">
            <div class="row">
                <div class="col-8">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfileImage)" alt="Product Image" />
                                <h5>Marie Horwitz</h5>
                                <p>Web Designer</p>
                                <i class="far fa-edit mb-5"></i>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Personal Data</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Username</h6>
                                            <p class="text-muted">@Model.UserName</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Role</h6>
                                            <p class="text-muted">@Model.Role</p>
                                        </div>
                                    </div>
                                    <h6>Activity</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Join Date</h6>
                                            <p class="text-muted">@Model.JoinTime.ToShortDateString()</p>
                                            <p class="text-muted">@Model.JoinTime.ToShortTimeString()</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @Html.Action("ChoiceList", "Account")
                </div>
            </div>
        </div>
    </div>
</body>
