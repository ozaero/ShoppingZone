@model IEnumerable<ShoppingZone.Data.Entity.OrderView>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>Order History</title>
<div class="container" style="margin-top:30px">
    <h2>Order History</h2>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Date</th>
                <th>Price</th>
                <th>Address Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.OrderNumber
                    </td>
                    <td>
                        @item.OrderDate
                    </td>
                    <td>
                        $@item.Total
                    </td>
                    <td>
                        @item.AddressName
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @Html.ActionLink("Order Details", "OrderDetail", new {id = item.Id}, new {@class="btn btn-primary"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>