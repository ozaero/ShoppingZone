@model ShoppingZone.Data.Entity.OrderDetail
@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<head>
    <link href="~/src/still/Order Detail.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top:30px">
        <div class="row">
            <div class="col-md-12">
                <h2>Order Details</h2>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Order Number</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>
                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">@Model.Total</dd>
                    <dt class="col-sm-3">Date</dt>
                    <dd class="col-sm-9">@Model.OrderDate</dd>
                    <dt class="col-sm-3">Address Name</dt>
                    <dd class="col-sm-9">@Model.AddressName</dd>
                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.Address</dd>
                    <dt class="col-sm-3">Products</dt>
                    <dd class="col-sm-9">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Count</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderLines)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Image != null)
                                            {
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Product Image" />
                                            }
                                            else
                                            {
                                                 <img src="~/src/image/istockphoto-1402399049-612x612.jpg" />
                                            }
                                        </td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price</td>
                                        <td>
                                            <a class="btn btn-primary" href="/Home/ProductDetail/@item.ProductId" target="_blank">Product Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</body>
