@using ShoppingZone.Data.Entity
@model Product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>@Model.Name</title>
<head>
    <link href="~/src/still/Product Detail.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="itemArea">
            <div class="row">
                <div class="col-md-6">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Product Image" />
                </div>
                <div class="col-md-6">
                    <h1>@Model.Name</h1>
                    <div class="stockArea">
                        <span class="badge badge-primary" style="background-color: black">In Stock</span>
                        <span class="product-number">#5768475</span>
                    </div>
                    <p>@Model.Description</p>
                    <div class="starArea">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star-half"></i>
                        <span class="badge badge-success" style="background-color: green">53</span>
                    </div>
                    <h2>$@Model.Price</h2>
                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        @Html.HiddenFor(i => i.Id)
                        <button class="btn btn-success" type="submit">
                            <i class="fa-solid fa-cart-plus"></i>
                            Add To Cart
                        </button>
                    }
                </div>
            </div>
        </div>
        <div class="navArea">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Detail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Recommendation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">History</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade active show" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <p id="tab-content">Raw denim you probably haven't heard of them jean shorts Austin. Nesciunt tofu stumptown aliqua, retro synth master cleanse. Mustache cliche tempor, williamsburg carles vegan helvetica. Reprehenderit butcher retro keffiyeh dreamcatcher synth. Cosby sweater eu banh mi, qui irure terry richardson ex squid. Aliquip placeat salvia cillum iphone. Seitan aliquip quis cardigan american apparel, butcher voluptate nisi qui.</p>
                    </div>
