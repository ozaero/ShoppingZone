@using ShoppingZone.Data.Entity
@model IEnumerable<ProductView>

<head>
    <link href="~/src/still/Product List.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <a href="/Home/ProductDetail/@item.Id" style="text-decoration: none">
                    <div class="col">
                        <div class="card">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Product Image"/>
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">$@item.Price</small>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</body>
