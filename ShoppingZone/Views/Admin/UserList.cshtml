@using ShoppingZone.Data.Entity
@model IEnumerable<User>
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>User List</title>
<head>
    <link href="~/src/still/UserList.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top:30px">
        <h2>Your Cart</h2>
        <hr />
        <div class="row">
            <div class="col-md-9">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Usernme</th>
                            <th>Join Time</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProfileImage)" alt="Product Image" />
                                </td>
                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.JoinTime.ToShortDateString()
                                    @item.JoinTime.ToShortTimeString()
                                </td>
                                <td>
                                    @item.Role
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/Admin/Index" class="list-group-item list-group-item-action list-group-item-light">Product</a>
                    <a href="/Admin2/Index" class="list-group-item list-group-item-action list-group-item-light">Category</a>
                    <a href="" class="list-group-item list-group-item-action list-group-item-light active">Users</a>
                </div>
            </div>
        </div>
    </div>
</body>
